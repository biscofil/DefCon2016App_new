<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mybg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            app:srcCompat="@drawable/icon_bordo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/home_meter"
                    style="@style/homeBtn"
                    android:src="@drawable/guide" />

                <TextView
                    android:id="@+id/home_meter_tv"
                    style="@style/homeBtnLabel"
                    android:text="@string/str_menu_meter" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/home_map"
                    style="@style/homeBtn"
                    android:src="@drawable/map" />

                <TextView
                    android:id="@+id/home_map_tv"
                    style="@style/homeBtnLabel"
                    android:text="@string/str_menu_map" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/home_guida"
                    style="@style/homeBtn"
                    android:src="@drawable/guida" />

                <TextView
                    android:id="@+id/home_guida_tv"
                    style="@style/homeBtnLabel"
                    android:text="@string/guide_short" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/home_licenze"
                    style="@style/homeBtn"
                    android:src="@drawable/credits" />

                <TextView
                    android:id="@+id/home_licenze_tv"
                    style="@style/homeBtnLabel"
                    android:text="@string/licenze_versioni_short" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>